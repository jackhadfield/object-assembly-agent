<launch>
  <arg name="colours_config" default="$(find colour_tracker_ros)/config/colours_config.yaml"/>
  <node 
    name="colour_tracker" 
    type="colour_tracker"
    pkg="colour_tracker_ros" 
    output="screen" 
    respawn="false"
    launch-prefix="">
        <rosparam command="load" file="$(arg colours_config)" />
  </node>
</launch>
